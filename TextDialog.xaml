<Window x:Class="Wallpapering.TextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallpapering"
        mc:Ignorable="d"
        Title="TextDialog" Height="135" Width="240" ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Label x:Name="lblQuestion" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.526,0.348" Height="26" Width="200" FontWeight="Normal"/>
        <TextBox x:Name="txtResponse" HorizontalAlignment="Left" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="18"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="160,62,0,0" VerticalAlignment="Top" Width="50" Height="20" IsCancel="True" Click="btnCancel_Click"/>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Left" Margin="105,62,0,0" VerticalAlignment="Top" Height="20" Width="50" IsDefault="True" Click="btnOk_Click"/>

    </Grid>
</Window>
